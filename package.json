  "license": "UNLICENSED",
  "homepage": "https://github.com/rareyesdev/rareyesdev-web#readme",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rareyesdev/rareyesdev-web.git"
  },
  "bugs": {
    "url": "https://github.com/rareyesdev/rareyesdev-web/issues"
  },
  "scripts": {
    "start": "node watch-build.js & nodemon --watch src --ext js,css --exec \"npm run build\"",
    "build": "npm run build:js && npm run build:css",
    "build:js": "terser --compress --mangle --source-map \"root='http://localhost:3000',url='main.min.js.map'\" --output build/main.min.js src/main.js",
    "build:css": "cleancss --source-map -o build/main.min.css src/main.css",
    "build:clean": "trash build/*",
    "copy-assets": "copyup public/**/* public/*.* build"
  },
  "devDependencies": {
    "browser-sync": "^2.26.9",
    "clean-css-cli": "^4.3.0",
    "copyfiles": "^2.3.0",
    "nodemon": "^2.0.4",
    "terser": "^4.8.0",
    "trash-cli": "^3.0.0"
  }
}
