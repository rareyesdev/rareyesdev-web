{
  "name": "rareyesdev-web",
  "version": "1.0.0",
  "description": "Personal website",
  "author": "Ram√≥n Alejandro Reyes Fajardo",
  "license": "UNLICENSED",
  "homepage": "https://github.com/rareyesdev/rareyesdev-web#readme",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rareyesdev/rareyesdev-web.git"
  },
  "bugs": {
    "url": "https://github.com/rareyesdev/rareyesdev-web/issues"
  },
  "scripts": {
    "start": "(npm run watch:js & npm run watch:css & npm run watch:assets) & node watch-build.js",
    "watch:js": "nodemon --watch src --ext js --exec \"npm run build:js\"",
    "watch:css": "nodemon --watch src --ext css --exec \"npm run build:css\"",
    "watch:assets": "nodemon --watch public --ext json,html,svg,jpg,png,ico,txt --exec \"npm run build:assets\"",
    "build": "npm run build:js && npm run build:css && npm run build:assets",
    "build:js": "terser --compress --mangle --source-map \"root='http://localhost:3000',url='main.min.js.map'\" --output build/main.min.js src/main.js",
    "build:css": "cleancss --source-map -o build/main.min.css src/main.css",
    "build:assets": "copyup public/**/* public/*.* build",
    "build:clean": "trash build/*"
  },
  "devDependencies": {
    "browser-sync": "^2.26.9",
    "clean-css-cli": "^4.3.0",
    "copyfiles": "^2.3.0",
    "nodemon": "^2.0.4",
    "terser": "^4.8.0",
    "trash-cli": "^3.0.0"
  }
}
